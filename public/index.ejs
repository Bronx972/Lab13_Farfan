<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <title>Document</title>
</head>
<body>
<!-- As a heading -->
<nav class="navbar navbar-dark bg-dark">
  <div class="container-fluid">
    <span class="navbar-brand mb-0 h1">Lab13</span>
  </div>
</nav>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-7">
        <form action="/filtro" method="POST">
          <input type="text" name="nombre" class="form-control mb-2" placeholder="Ingrese nombre a filtrar" />
          <button type="submit" class="btn btn-primary">Enviar</button>
        </form><br><br>
        
        <table class="table table-dark table-bordered table-hover" action="/upload" method="POST" enctype="multipart/form-data">
          <thead>
            <tr>
              <td>NÂ°</td>
              <td>Apellidos</td>
              <td>Nombres</td>
              <td>Sexo</td>
              <td>Especialidad</td>
              <td>Foto</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% resultados.forEach(function(elemento) { 
            %>
            <tr>
              <td>#</td>
              <td><%= elemento.apellidos %></td>
              <td><%= elemento.nombres %></td>
              <td><%= elemento.sexo %></td>
              <td><%= elemento.especialidad %></td>
              <td style="align-items: center;"><img src="<%= elemento.urlImagen %>" width="100px" height="100px" alt="Imagen"></td>
              <td >
                <a href="/editar/<%= elemento._id %>" class="btn btn-info">
                  Edit
                </a>
                <a href="/eliminar/<%= elemento._id %>" class="btn btn-danger">
                  Delete
                </a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <div class="col-md-5">
        <div class="card-body">
          <form action="/guardar" method="POST" enctype="multipart/form-data" >
            <input
              type="text"
              name="apellidos"
              placeholder="Apellidos"
              class="form-control mb-2"
            />
            <input
              type="text"
              name="nombres"
              placeholder="Nombres"
              class="form-control mb-2"
              autofocus
            />
            <input
              type="string"
              name="sexo"
              placeholder="Sexo"
              class="form-control mb-2"
            />
            <input
              type="string"
              name="especialidad"
              placeholder="Especialidad"
              class="form-control mb-2"
            />
            <input
              type="file"
              name="foto"
              placeholder="url"
              class="form-control mb-2"
              autofocus
            />
  
            <button type="submit" class="btn btn-info">Guardar Paciente</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>